{
  "extends": "appconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/config/*": ["config/*"],
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/layouts/*": ["layouts/*"],
      "@/libraries/*": ["libraries/*"],
      "@/hooks/*": ["hooks/*"],
      "@/styles/*": ["styles/*"],
      "@/types": ["types/index"],
      "@/types/*": ["types/*"],
      "~/*": ["public/*"]
    }
  },
  "include": ["next-env.d.ts", "types/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
