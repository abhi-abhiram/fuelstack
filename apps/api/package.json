{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rimraf dist && swc src -d dist",
    "clean": "rimraf .turbo && rimraf node_modules && rimraf dist",
    "dev": "concurrently \"pnpm watch-compile\" \"pnpm watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/app.js",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\"",
    "start": "NODE_ENV=production node dist/app.js",
    "test": "NODE_ENV=development jest --detectOpenHandles"
  },
  "dependencies": {
    "@acme/logger": "workspace:*",
    "@fastify/autoload": "^5.7.1",
    "@fastify/sensible": "^5.2.0",
    "@mgcrea/fastify-request-logger": "^1.1.1",
    "@mgcrea/pino-pretty-compact": "^1.3.0",
    "dotenv": "^16.3.1",
    "fastify-plugin": "^4.5.0",
    "fastify": "^4.19.2",
    "zennv": "^0.1.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@acme/eslint-config-server": "workspace:*",
    "@acme/jest-presets": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.67",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "jest": "^29.6.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "tsup": "^7.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "@acme/jest-presets/jest/node"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 2500
  }
}
