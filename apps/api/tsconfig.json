{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@acme/tsconfig/base.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2022"],
        "module": "es2022",
        "outDir": "dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es2022",
        "types": ["jest", "node"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "ts-node": {
        "swc": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
