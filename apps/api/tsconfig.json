{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../libraries/tsconfig/base.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2020"],
        "module": "es2020",
        "outDir": "dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es2020",
        "types": ["jest", "node"],
        "typeRoots": ["./node_modules/@types", "./node_modules/@acme"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "ts-node": {
        "swc": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["src/**/*.ts", "**/*.spec.ts"],
    "exclude": ["node_modules"]
}
