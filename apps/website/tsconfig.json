{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@acme/tsconfig/nextjs.json",
    "compilerOptions": {
        "outDir": "dist",
        "plugins": [{ "name": "next" }],
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./public/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
