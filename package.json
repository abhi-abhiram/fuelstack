{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "deps": "npx --yes npm-check-updates -x typescript --deep --interactive",
    "dev": "turbo dev --no-cache --continue --concurrency=11",
    "dev:web": "turbo dev --no-cache --continue --filter={api,website}...",
    "dev:admin": "turbo dev --no-cache --continue --filter={api,admin}...",
    "dev:blog": "turbo dev --no-cache --continue --filter={api,blog}...",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "lint": "turbo lint",
    "test": "turbo test"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.5"
}
