{
    "name": "fuelstack",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "turbo build --concurrency=20",
        "dev": "turbo dev --continue --concurrency=20",
        "dev:api": "turbo run dev --filter=api...",
        "dev:admin": "turbo run dev --filter=admin... --concurrency=20",
        "dev:website": "turbo run dev --filter=website... --concurrency=20",
        "build:website": "turbo run build --filter=website...",
        "deps": "npx --yes npm-check-updates -x typescript --deep --interactive",
        "db:introspect": "turbo db:introspect --filter=@acme/database",
        "db:migrate": "turbo db:migrate --filter=@acme/database",
        "db:generate": "turbo db:generate --filter=@acme/database",
        "db:check": "turbo db:check --filter=@acme/database",
        "db:up": "turbo db:up --filter=@acme/database",
        "db:drop": "turbo db:drop --filter=@acme/database",
        "format": "prettier --write \"**/*.{json,css,cjs,mjs,js,jsx,ts,tsx,md,mdx,yml}\"",
        "cleanup": "turbo clean && docker-compose -f docker-compose.yml down --remove-orphans",
        "pre-dev": "docker-compose -f docker-compose.yml up -d",
        "lint": "turbo lint",
        "test": "turbo test"
    },
    "devDependencies": {
        "prettier-plugin-tailwindcss": "^0.4.1",
        "prettier": "^3.0.1",
        "rimraf": "^5.0.1",
        "turbo": "^1.10.12"
    },
    "packageManager": "pnpm@8.6.11"
}
