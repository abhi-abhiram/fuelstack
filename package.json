{
    "name": "fuelstack",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "turbo build --concurrency=20",
        "dev": "turbo dev --continue --concurrency=20",
        "dev:api": "turbo run dev --filter=api...",
        "dev:admin": "turbo run dev --filter=admin...",
        "dev:website": "turbo run dev --filter=website...",
        "build:api": "turbo run build --filter=api...",
        "build:admin": "turbo run build --filter=admin...",
        "build:website": "turbo run build --filter=website...",
        "deps": "npx --yes npm-check-updates -x typescript --deep --interactive",
        "db:introspect": "turbo run db:introspect --filter=@acme/database",
        "db:migrate": "turbo run db:migrate --filter=@acme/database",
        "db:generate": "turbo run db:generate --filter=@acme/database",
        "db:check": "turbo run db:check --filter=@acme/database",
        "db:up": "turbo run db:up --filter=@acme/database",
        "db:drop": "turbo run db:drop --filter=@acme/database",
        "format": "prettier --write \"**/*.{json,css,cjs,mjs,js,jsx,ts,tsx,md,mdx,yml}\"",
        "cleanup": "turbo clean && docker-compose -f docker-compose.yml down --remove-orphans",
        "start-docker": "docker-compose -f docker-compose.yml up -d",
        "pre-dev": "pnpm start-docker && pnpm db:migrate",
        "lint:fix": "turbo run lint -- --fix",
        "lint": "turbo run lint",
        "test": "turbo run test"
    },
    "devDependencies": {
        "@acme/eslint-config": "workspace:*",
        "eslint": "^8.46.0",
        "prettier-plugin-tailwindcss": "^0.4.1",
        "prettier": "^3.0.1",
        "rimraf": "^5.0.1",
        "turbo": "^1.10.12",
        "typescript": "5.1.6"
    },
    "packageManager": "pnpm@8.6.11"
}
