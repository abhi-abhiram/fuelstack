{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
            "dependsOn": ["^build"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "persistent": true,
            "cache": false
        },
        "start": {
            "dependsOn": ["^build"],
            "persistent": false,
            "cache": false
        },
        "test": {
            "dependsOn": ["//#watch-del"],
            "outputs": ["coverage/**"]
        },
        "test:ui": {
            "cache": false
        },
        "test:watch": {
            "cache": false
        },
        "coverage": {
            "cache": false
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "//#format": {
            "dependsOn": []
        },
        "//#watch-del": {
            "dependsOn": []
        },
        "clean": { "cache": false },
        "db:introspect": { "cache": false },
        "db:generate": { "cache": false },
        "db:check": { "cache": false },
        "db:up": { "cache": false },
        "db:drop": { "cache": false },
        "db:migrate": {
            "dependsOn": ["@repo/utils#build", "@repo/database#build"],
            "cache": false
        },
        "db:seed": {
            "dependsOn": ["@repo/utils#build", "@repo/database#build"],
            "cache": false
        }
    }
}
