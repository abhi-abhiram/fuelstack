{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2022"],
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        // Drizzle doesn't support es5 yet
        "target": "ES2022"
    },
    "ts-node": {
        "swc": false,
        "compilerOptions": {
            "module": "NodeNext"
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
