        "lint": "eslint \"**/*.{ts,tsx}\"",
        "test": "jest"
    },
    "dependencies": {
        "clsx": "^2.0.0",
        "tailwind-merge": "^1.14.0"
    },
    "devDependencies": {
        "@acme/eslint-config": "workspace:*",
        "@acme/jest-presets": "workspace:*",
        "@types/jest": "^29.5.3",
        "@types/node": "^20.4.9",
        "eslint": "^8.46.0",
        "jest-environment-jsdom": "^29.6.2",
        "jest": "^29.6.2",
        "tsup": "^7.2.0",
        "typescript": "5.1.6"
    },
    "jest": {
        "preset": "@acme/jest-presets/jsdom"
    }
}
